---
import "../styles/globals.css";
import { fonts } from "../../../src/core/assets.js";

interface Props {
  title: string;
}

const { title } = Astro.props;
const fontUrl = fonts["geist"];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Generate beautiful LLM benchmark charts from YAML data" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Bundled Geist font -->
    <style set:html={`
      @font-face {
        font-family: 'Geist';
        src: url(${fontUrl}) format('truetype');
        font-weight: 400 700;
        font-style: normal;
        font-display: swap;
      }
    `}></style>
  </head>
  <body>
    <slot />
  </body>
</html>
