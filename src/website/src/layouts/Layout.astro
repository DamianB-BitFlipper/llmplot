---
import "../styles/globals.css";
import { fonts } from "../../../core/assets.js";
const faviconIcon = { src: "/favicon.svg" };

interface Props {
  title: string;
}

const { title } = Astro.props;
const fontUrl = fonts["geist"];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Generate beautiful LLM benchmark charts from YAML data" />
    <link rel="icon" type="image/svg+xml" href={faviconIcon.src} />
    <title>{title}</title>
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1FYGC7FZRM"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1FYGC7FZRM');
    </script>
    
    <!-- Bundled Geist font -->
    <style set:html={`
      @font-face {
        font-family: 'Geist';
        src: url(${fontUrl}) format('truetype');
        font-weight: 400 700;
        font-style: normal;
        font-display: swap;
      }
    `}></style>
  </head>
  <body>
    <slot />
  </body>
</html>
