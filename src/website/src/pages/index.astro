---
import Layout from "../layouts/Layout.astro";
import ChartGenerator from "../components/ChartGenerator";
import { Toaster } from "../components/ui/sonner";
import { XFollowBadge } from "../components/badges/XFollowBadge";
import { GitHubStarBadge } from "../components/badges/GitHubStarBadge";
import { BuyMeCoffeeBadge } from "../components/badges/BuyMeCoffeeBadge";
const faviconIcon = { src: "/favicon.svg" };
---

<Layout title="LLM Plot - Making LLM plots not ugly.">
  <main class="min-h-screen bg-gray-50">
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between gap-3">
        <div class="flex items-center gap-3">
          <img src={faviconIcon.src} alt="LLM Plot" class="w-11 h-11" />
          <div class="flex items-baseline gap-2.5">
            <h1 class="text-xl font-bold text-slate-900 tracking-tight">LLM Plot</h1>
            <span class="text-slate-500 italic text-[15px] hidden sm:inline">Making LLM plots not ugly.</span>
          </div>
        </div>
        
        <div class="flex items-center gap-2">
          <div class="hidden md:block">
            <XFollowBadge client:load />
          </div>
          <div class="hidden md:block">
            <GitHubStarBadge client:load />
          </div>
          <BuyMeCoffeeBadge client:load />
        </div>
      </div>
    </header>
    <div class="max-w-6xl mx-auto px-4 py-4">
      <ChartGenerator client:only="react" />
    </div>
  </main>
  <Toaster client:load richColors position="bottom-right" />
</Layout>
